<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="gjj_unit_test.gjj_bigimage_show.MainActivity">

   <Button
       android:id="@+id/btn_to"
       android:layout_marginTop="10dp"
       android:text="跳转加载大图片"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
   <ImageView
       android:id="@+id/iv_big"
       android:scaleType="center"
       android:layout_below="@+id/btn_to"
       android:adjustViewBounds="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="30dp"
       android:background="@mipmap/ic_launcher"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   //adjustViewBounds: 是否去调整这个视图的界限去保存绘制的初始范围比例；
   <ImageView
       android:id="@+id/iv_big_real"
       android:scaleType="center"
       android:adjustViewBounds="true"
       android:layout_marginTop="20dp"
       android:layout_below="@+id/iv_big"
       android:layout_centerInParent="true"
       android:layout_width="wrap_content"
       android:background="@mipmap/ic_launcher"
       android:layout_height="wrap_content" />
</RelativeLayout>
